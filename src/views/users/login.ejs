<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>
        <section>
            <div>
                <h2>INGRESA</h2><img src="./images/music_icon.png" id="disco" alt="music_icon">
            </div>
            <div>
                <br>
                <% if (locals.errores) { %>
                    <% errores.forEach(e => { %>
                        <p class="error_msg_form"><i class="fa-solid fa-triangle-exclamation"></i> - <%= e.msg %></p>
                    <% } )%>
                <% }%>
                <% if (locals.session) { %>
                     <p><%= locals.session %></p>
                <% }%>
                <form action="/login" method="POST" class="contenedor_login">
                        <label for="usuario_log">Nombre de usuario</label>
                        <input type="text" name="usuario_log"> 
                        <br>
                        <label for="password">Contraseña</label>
                        <input type="password" name="password_log">
                        <br>    
                            <div>
                                <input  type="submit" value="Enviar" name="submit_login">
                            </div>
                        <br>
                        <br>
                            <a href="#">¿Olvidaste tu contraseña?</a>
                        <br>
                            <a href="/registro">Registrate</a>
                </form>    
            </div> 
            <br>
        </section>
    </main>

    <%- include('../partials/footer') %>

</body>
</html>
